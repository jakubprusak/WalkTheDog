@model WalkTheDog.Public.Home.SearchDogCriteriaDto
<div class="intro-header">
    <div class="container">

        <div class="row">
            <div class="col-lg-12">
                <div class="intro-message">
                    <h1></h1>
                    <h3></h3>
                    <div class="row">
                        <div class="col-lg-3 col-md-6 col-md-offset-3">
                            <div class="well" style="background-color: transparent">
                                <h3 align="center"></h3>
                                <form id="findForm" class="form-horizontal">
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.DogSize, new {@class = "form-label"})
                                        @Html.EnumDropDownListFor(model => model.DogSize, new {@class = "form-control"})
                                    </div>
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.Date, new {@class = "form-label"})
                                        @Html.TextBoxFor(model => model.Date, new { id = "date", @class = "form-control" })
                                    </div>
                                    <div class="form-group">
                                        ZipCode or City
                                        <div class="input-group">
                                            @Html.TextBoxFor(model => model.ZipCode, new { id = "zipCode", @class = "form-control" })
                                            @Html.TextBoxFor(model => model.City, new {@class = "form-control"})
                                        </div>
                                    </div>
                                    <p class="text-center"><a id="go" class="btn btn-primary glyphicon glyphicon-search" role="button">Go</a>
                                    </p>
                                </form>
                            </div>

                            <a href="/Meetings/Index"class="btn btn-danger">Create dog Meeting</a>
                        </div>

                    </div>
                </div>
            </div>
        </div>

    </div>
    <!-- /.container -->

</div>

@section scripts {
    <script src="~/js/Home/Index.js"></script>
}